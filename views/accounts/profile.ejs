<% layout('layout') -%>

<div class="container">

  <div class="row">
    <div class="col-sm-6 col-md-4">
      <img class="img-circle img-responsive img-center" src="<%= user.profile.picture %>" alt="">
      <br />
      <p>名前: <%= user.profile.name %></p>
      <p>Eメール: <%= user.email %></p>
      <% if(user.address === "" || typeof user.address === "undefined"){ %>
      <p>住所: 未設定</p>
      <% } else { %>
      <p>住所: <%= user.address %></p>
      <% } %>
      <a href="/edit-profile" class="btn btn-primary btn-lg">プロフィールを編集する</a>
    </div>
  </div>

</div>
